{
  "emulators": {
    "auth": {
      "port": 9099,
      "host": "0.0.0.0"
    },
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "hosting": [
      {
        "target": "auth",
        "public": "auth",
        "port": 6000
      },
      {
        "target": "admin",
        "public": "admin/dist/admin",
        "port": 6001
      }
    ],
    "ui": {
      "enabled": true
    }
  },
  "hosting": [
    {
      "target": "auth",
      "public": "auth",
      "cleanUrls": true
    },
    {
      "target": "admin",
      "public": "admin/dist/admin",
      "ignore": [
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "homepage",
      "public": "homepage",
      "cleanUrls": true
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}